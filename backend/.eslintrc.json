{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "plugin:node/recommended",
        "plugin:promise/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "script"
    },
    "plugins": ["prettier"],    
    "rules": {
        "prettier/prettier": ["error"]
        // "linebreak-style": ["error", "windows"],
        // "no-console": "off",
        // "node/no-unsupported-features/es-syntax": "off",
        // "comma-dangle": "off",
        // "allowIndentationTabs": 1,
        // "indent": ["error", "tab"],
        // "semi": [2, "always"]
    }
}
